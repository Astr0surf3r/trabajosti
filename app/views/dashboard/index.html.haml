- content_for :header do
  .column-mini
    %h1 
      - if @action == 'all'
        Todas las ofertas dispoibles 
      - else
        Ofertas recientes
      -if !@jobs.empty?
        %small
          publicadas
          = time_ago_in_words @jobs.first.created_at
  .column-mini-right
    = link_to 'Nueva oferta', new_job_path, :class => 'awesome large blue'
  .clear
%div #{flash[:error]||flash[:notice]}
%ul.listing
  = render @jobs
- if @action == 'all'
  = link_to "Regresar a pÃ¡gina principal", root_path
- else
  - if @total > 20
    = link_to "Ver todas las #{@total} ofertas", all_path
